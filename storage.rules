rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read/write access to preview files
    // Note: For production, consider requiring authentication for writes
    match /previews/{previewId}/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }

    // Default: require authentication for other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
